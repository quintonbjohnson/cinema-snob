<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".View.RegistrationActivity"
    tools:showIn="@layout/activity_registration"
    android:background="@color/brightBlue"
    android:padding="25dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/submit_register"
        android:background="@color/orange"
        android:enabled="true"
        android:fontFamily="Helvetica"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/register_password"
        android:layout_alignEnd="@+id/register_password"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancel_register"
        android:background="@color/orange"
        android:enabled="true"
        android:fontFamily="Helvetica"
        android:layout_alignTop="@+id/submit_register"
        android:layout_alignStart="@+id/register_password"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_username"
        android:hint="Username"
        android:backgroundTint="@color/white"
        android:textColor="@color/white"
        android:enabled="true"
        android:textColorHint="@color/white"
        android:fontFamily="Helvetica"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_above="@+id/register_email"
        android:layout_alignStart="@+id/register_email"
        android:layout_alignEnd="@+id/register_email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/register_email"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:fontFamily="Helvetica"
        android:textColorHint="@color/white"
        android:hint="Email"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_above="@+id/register_password"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/register_password"
        android:backgroundTint="@color/white"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Password"
        android:textIsSelectable="false"
        android:fontFamily="Helvetica"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/register_email" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Registration"
        android:id="@+id/textView"
        android:textColor="@color/white"
        android:fontFamily="Helvetica"
        android:layout_marginTop="102dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textIsSelectable="false"
        android:textSize="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_major"
        android:layout_below="@+id/register_password"
        android:hint="Major"
        android:layout_alignStart="@+id/register_password"
        android:layout_alignEnd="@+id/submit_register"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:fontFamily="Helvetica"
        android:textAlignment="center"
        android:textSize="20dp"
        android:backgroundTint="@color/white"/>

</RelativeLayout>
