<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MovieItemActivity"
    tools:showIn="@layout/activity_movie_item"
    android:background="@color/brightBlue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/title_text"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:visibility="visible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profilePicture"
        android:layout_below="@+id/title_text"
        android:layout_toStartOf="@+id/title_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Actors"
        android:id="@+id/textView2"
        android:layout_below="@+id/profilePicture"
        android:layout_alignStart="@+id/synopsisText"
        android:paddingTop="20dp"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/actorsText"
        android:paddingTop="5dp"
        android:textColor="@color/white"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rating"
        android:id="@+id/textView3"
        android:layout_below="@+id/actorsText"
        android:layout_alignStart="@+id/textView2"
        android:paddingTop="10dp"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/textView4"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/actorsText"
        android:paddingTop="5dp"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Synopsis"
        android:id="@+id/textView5"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:layout_below="@+id/ratingBar2"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/synopsisText"
        android:paddingTop="5dp"
        android:textColor="@color/white"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_below="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Rotten Tomatoes Rating:"
        android:id="@+id/textView6"
        android:textColor="@color/white"
        android:paddingTop="20dp"
        android:layout_below="@+id/genreText"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cinema Snob Rating:"
        android:id="@+id/textView7"
        android:paddingTop="5dp"
        android:textColor="@color/white"
        android:layout_below="@+id/genreText"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar2"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Genre"
        android:id="@+id/textView8"
        android:layout_below="@+id/textView4"
        android:layout_alignStart="@+id/textView3"
        android:paddingTop="10dp"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/genreText"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/textView4"
        android:paddingTop="5dp"
        android:textColor="@color/white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your rating:"
        android:id="@+id/textView10"
        android:paddingTop="5dp"
        android:textColor="@color/white"
        android:layout_below="@+id/textView7"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/rtRatingText"
        android:paddingTop="5dp"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toEndOf="@+id/title_text" />

</RelativeLayout>
