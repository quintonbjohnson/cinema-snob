<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.github.cinemasnob">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".controller.RequestController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.LoginScreenActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.HomeScreenActivity"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.RegistrationActivity"
            android:label="@string/title_activity_create_profile"
            android:parentActivityName=".view.LoginScreenActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.LoginScreenActivity" />
        </activity>
        <activity
            android:name=".view.UserProfileActivity"
            android:label="@string/title_activity_user_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.EditProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.MovieItemActivity"
            android:label="@string/title_activity_movie_item"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.MovieSuggestionActivity"
            android:label="@string/title_activity_movie_suggestion"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.AdminActivity"
            android:label="@string/title_activity_admin"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".view.UserItemActivity"
            android:label="@string/title_activity_user_item"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
